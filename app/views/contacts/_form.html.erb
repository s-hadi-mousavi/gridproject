<%= simple_form_for @contact, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :client_id %>
  <%= f.input :name %>
  <%= f.input :phone %>
  <%= f.input :cellphone %>
  <%= f.input :email %>
  <%= f.input :comment %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                contacts_path, :class => 'btn' %>
  </div>
<% end %>
