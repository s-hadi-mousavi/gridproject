<%- model_class = Project.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table">
 <thead>
  <tr>
      <th><%= sort_link @search, :client_name %></th>
      <th><%= sort_link @search, :name %></th>
      <th><%= sort_link @search, :description %></th>
    <th>Actions</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>

<% @projects.each do |project| %>
  <tr onclick="location.href='<%= client_project_path(project.client_id,project) %>'">
    <td><%= project.client.name%></td>
    <td><%= project.name %></td>
    <td><%= project.description %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_client_project_path(project.client_id,project), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      client_project_path(project.client_id,project),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
 </tr>
<% end %>
  </tbody>

</table>

<br />

