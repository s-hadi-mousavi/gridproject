<%= simple_form_for [@client,@project], :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                @client, :class => 'btn' %>
  </div>
<% end %>
