<%= simple_form_for @developer, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nit %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone %>
  <%= f.input :web %>
  <%= f.input :email %>
  <%= f.input :comment %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                developers_path, :class => 'btn' %>
  </div>
<% end %>
